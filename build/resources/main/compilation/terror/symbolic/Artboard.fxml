   <top>
      <VBox prefHeight="20.0" prefWidth="400.0" style="-fx-background-color: #6970E3;" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="20.0" prefWidth="400.0">
               <children>
                  <Label text="Artboard" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <right>
      <VBox alignment="CENTER" prefHeight="330.0" prefWidth="0.0" spacing="2.0" stylesheets="@Artboard.css" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonBrush" mnemonicParsing="false" prefHeight="54.0" prefWidth="70.0">
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="remixmz-pencil-fill" iconSize="30" />
               </graphic>
            </Button>
            <ToggleButton fx:id="buttonEraser" mnemonicParsing="false" prefHeight="54.0" prefWidth="70.0" styleClass="button" textFill="WHITE">
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="remixal-eraser-fill" iconSize="30" />
               </graphic>
            </ToggleButton>
            <Button fx:id="buttonClear" mnemonicParsing="false" prefHeight="54.0" prefWidth="70.0">
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="remixal-delete-bin-3-fill" iconSize="30" />
               </graphic>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets right="5.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <center>
      <Canvas fx:id="canvas" height="297.0" width="319.0" BorderPane.alignment="CENTER" />
   </center>
